@model FSD_Helpderly.Models.ElderlyGetOTPViewModel

@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Get OTP";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Kalam' rel='stylesheet'>

    <title>Elderly Login</title>
    <script src="https://www.gstatic.com/firebasejs/8.0.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.0.1/firebase-analytics.js"></script>

</head>
<h1 class="PageTitle">Elderly Login</h1>

<hr />
<form asp-action="ElderlyGetOTP" method="post">
    <fieldset class="FormContent">
        <div class="form-group row">
            <label asp-for="EmailAddress" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>
        </div>

        <span class="text-danger">@Html.ValidationMessage("CustomError")</span>
    </fieldset>
</form>

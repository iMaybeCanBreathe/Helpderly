@model FSD_Helpderly.Models.ElderlyPost

@{
    ViewData["Title"] = "Accept";
}

<head>
    <link rel="stylesheet" href="~/css/Package3.css" />
</head>
<
<h4 class="PageTitle">Accept</h4>
<body>
    <div class="row box">
        <div class="col-sm-4"></div>
        <div class="col-sm-8">
            <form asp-action="Details">
                <fieldset class="FormContent">
                    <div class="form-group row">
                        <label asp-for="AdditionalInfo"
                               class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2 col-md-3 form-control-plaintext">
                            @Html.Display("StaffID")
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2 col-md-3 form-control-plaintext">
                            @Html.Display("StaffName")
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2 col-md-3 form-control-plaintext">
                            @Html.Display("Vocation")
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="EndTime" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2 col-md-3 form-control-plaintext">
                            @Html.Display("Gender")
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Location" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2 col-md-3 form-control-plaintext">
                            @Html.Display("dateOfemployed")
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="MobileNumber" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2 col-md-3 form-control-plaintext">
                            @Html.Display("emailAddress")
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2 col-md-3 form-control-plaintext">
                            @Html.Display("emailAddress")
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="QuantityVolunteer" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2 col-md-3 form-control-plaintext">
                            @Html.Display("emailAddress")
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="StartTime" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2 col-md-3 form-control-plaintext">
                            @Html.Display("emailAddress")
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-5">
                            <a asp-action="Accept" asp-controller="Volunteer" asp-route-id="@Model.Name">Accept Voulunteers</a>
                            <a asp-action="ViewAllPersonnelAndFlightAssigned" asp-controller="Staff">Back to List</a>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</body>

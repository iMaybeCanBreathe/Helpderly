@model FSD_Helpderly.Models.ChangePassword

<link rel="stylesheet" type="text/css" href="~/css/customer.css">

<h1 class="PageTitle">ChangePassword</h1>

<hr />
<form asp-controller="Customer" asp-action="ChangePassword">
    <fieldset class="FormContent">
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <!--Compare Password with DatabasePassword -->
        <div>
            <input asp-for="DatabasePassword" class="form-control" type="hidden" />
            <span asp-validation-for="DatabasePassword" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="NewPassword" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ConfirmPassword" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>
        <span style="color:red;">@TempData["Message"]</span>
    </fieldset>
</form>
